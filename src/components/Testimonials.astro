---
// Props del componente
interface Props {
  image: string // URL de la imagen del perfil
  description: string // Testimonio
}

const { image, description } = Astro.props
---

<article class="flex flex-col gap-4 bg-gradient-to-r from-primary/10 to-secondary/10 rounded-3xl p-8 transition-transform duration-300 hover:scale-105 hover:shadow-lg">
  <!-- Imagen de perfil -->
  <div class="flex justify-center">
    <img src={image} class="w-20 h-20 rounded-full object-cover transition-transform duration-300 hover:scale-110" />
  </div>

  <!-- Testimonio -->
  <div class="flex flex-col gap-4 text-center">
    <p class="text-neutral-500">{description}</p>
  </div>
</article>